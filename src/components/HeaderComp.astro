---
import headerImg from "../assets/header.png";
---
<header>
    <ul>
        <li><a href="/astro1/">Home</a></li>
        <li><a href="/astro1/page2">Page 2</a></li>
        <li><a href="/astro1/page3">Page 3</a></li>
        <li><a href="/astro1/page4">Page 4</a></li>
        <li><a href="/astro1/page5">Page 5</a></li>
        <li><a href="/astro1/page6">Page 6</a></li>
    
    </ul>
</header>

<style>
        :root { /*	:root selector matches the documents root element */
    --blue: #00467c;	/* <variable-name>:<variable-value> */
    font-family: Arial, Helvetica, sans-serif;
}

ul{
    list-style-type:none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: var(--blue);
}

li{
    float: left;
    border-right: 1px solid white;
}

li:last-child{
    border-right: none;
}

li a{
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
}

li a:hover:not(.active){
    background-color: #0261aa;

}
.active{
    background-color: #0261aa;
}

header{
    width:100%;
    height:400px;
    background-image: {headerImg.url};
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    margin-bottom: 10px;
    
}



</style>